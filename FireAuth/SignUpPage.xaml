<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FireAuth.SignUpPage">
    <StackLayout
        VerticalOptions="Center"
        Margin="20">
        
        <Label
            Text="Create your account"
            HorizontalOptions="Center"
            TextColor="#4682B4"
            FontSize="30"
            Margin="0, 20" />
        
        <Entry
            Placeholder="E-mail"
            Keyboard="Email"
            x:Name="EmailInput" />
        
        <Entry
            Placeholder="Password"
            IsPassword="true"
            x:Name="PasswordInput" />
        
        <Button
            Text="Sign Up"
            Clicked="SignUpClicked"
            Margin="60, 40"
            BackgroundColor="#4682B4"
            TextColor="White" />
        
    </StackLayout>

</ContentPage>
